<Window x:Class="WpfApp10.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="MainWindow" Height="500" Width="800">
    
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="загрузка.gif" />
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>

        </Grid.ColumnDefinitions>
        <Button Grid.Column="0" Content="Левая сторона" />
        <GridSplitter Grid.Column="1" ShowsPreview="False" Width="3" HorizontalAlignment="Left" VerticalAlignment="Stretch "/>
        <Button Grid.Column="2" Content="Правая кнопка" />



    </Grid>
</Window>
